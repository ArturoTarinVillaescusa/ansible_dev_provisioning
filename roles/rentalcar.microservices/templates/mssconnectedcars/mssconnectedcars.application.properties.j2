# ===============================
# ENCRYPTION
# ===============================
jasypt.encryptor.password=${JASYPT_MASTER_PASS:123456}
# ===============================
# ENVIRONMENT VARIABLES
# ===============================
DBSERVER= {{ mss_db_server }}
DBNAME= {{ mss_db_name }}
DBUSER= {{ mss_db_user }}
DBPASSWORD= {{ mss_db_pass }}
# ===============================
# DATA SOURCE SETTINGS
# ===============================
# spring properties
spring.datasource.url=jdbc:sqlserver://${DBSERVER};databaseName=${DBNAME};useUnicode=true;characterEncoding=UTF-8;
spring.datasource.driverClassName=com.microsoft.sqlserver.jdbc.SQLServerDriver
spring.datasource.username=${DBUSER}
spring.datasource.password=${DBPASSWORD}
# ===============================
# JPA / HIBERNATE
# ===============================
# Show or not log for each sql query
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.use_sql_comments=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.type=trace
logging.level.org.hibernate.type=error
# Naming strategy
spring.jpa.hibernate.naming-strategy=org.hibernate.cfg.DefaultNamingStrategy
spring.jpa.hibernate.naming.implicit-strategy=org.hibernate.boot.model.naming.ImplicitNamingStrategyLegacyJpaImpl
spring.jpa.hibernate.naming.physical-strategy=org.hibernate.boot.model.naming.PhysicalNamingStrategyStandardImpl
# Allows Hibernate to generate SQL optimized for a particular DBMS
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.SQLServer2012Dialect
spring.cache.caffeine.spec=maximumSize=100,expireAfterAccess=30s
#spring.jpa.hibernate.connection.characterEncoding=utf8
#spring.jpa.hibernate.connection.useUnicode=true
spring.datasource.hikari.data-source-properties.useUnicode=true
spring.datasource.hikari.data-source-properties.characterEncoding=UTF-8
# ===============================
# LOGGING
# ===============================
logging.level.root=ERROR
logging.level.org.springframework.boot.web.embedded.tomcat.*=INFO
# Uncomment next line to change log level in this project
logging.level.com.rentalcar.microservice.*=INFO

